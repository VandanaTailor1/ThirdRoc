<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AmmountPay">

    <include
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        layout="@layout/same_ui"
        android:id="@+id/leftarrow"
        />
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/leftarrow"
        app:cardCornerRadius="10dp"
        android:layout_marginHorizontal="15dp"
        android:layout_marginTop="15dp"
        android:id="@+id/card"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            >
        <ImageView
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/shop"
            android:layout_marginStart="8dp"
            android:layout_marginTop="12dp"
            android:id="@+id/shop"
           />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@+id/shop"
                android:text="SELECT STORE"
                android:textSize="15sp" />
        <ImageView
            android:layout_width="17dp"
            android:layout_height="17dp"
            android:src="@drawable/chevron"
            android:layout_alignParentRight="true"
            android:layout_marginRight="5dp"
            android:layout_marginTop="15dp"
        />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="You are paying"
        android:layout_below="@id/card"
         android:layout_centerInParent="true"
        android:layout_marginTop="60dp"
        android:id="@+id/paymsg"
        android:textSize="18sp"
        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/paymsg"
        android:orientation="horizontal"
        android:layout_centerInParent="true"
        >
        <TextView
            android:id="@+id/currency"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="@null"
            android:inputType="number"
            android:text="$"
            android:textColor="@color/bordercolor"
            android:textSize="40sp" />

        <EditText
            android:id="@+id/money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/currency"
            android:background="@null"
            android:gravity="start"
            android:inputType="number"
            android:minWidth="50dp"
            android:hint="0"
            android:textColor="@color/bordercolor"
            android:textSize="40sp" />
    </LinearLayout>
    <LinearLayout
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pay from"
         android:layout_below="@+id/money"
        android:id="@+id/payfrom"
        android:textSize="16sp"
        android:layout_marginLeft="15dp"
        />
     <RelativeLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_below="@id/payfrom"
         android:layout_marginTop="15dp"
         android:id="@+id/r1"
         >
               <RadioButton
                   android:layout_width="40dp"
                   android:layout_height="40dp"
                  android:textColor="@color/blue"
                   android:id="@id/round"
                   android:checked="false"
                   />
           <LinearLayout
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_toRightOf="@+id/round"
               android:id="@+id/linar"
               android:orientation="vertical"
               android:layout_marginLeft="10dp"
               >
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="EWA Limit"
                   />
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="available balance"
                   />
           </LinearLayout>
         <ImageView
             android:layout_width="40dp"
             android:layout_height="40dp"
             android:src="@drawable/round2"
             android:layout_alignParentRight="true"
             android:layout_marginTop="2dp"
             android:layout_marginRight="10dp"
             android:id="@+id/imground"
             />
         <View
             android:layout_width="match_parent"
             android:layout_height="0.5dp"
             android:id="@+id/view1"
             />
     </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/r1"
        android:layout_marginTop="10dp"
        >
            <RadioButton
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:textColor="@color/blue"
                android:id="@id/round1"
                />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/round1"
            android:id="@+id/linar1"
            android:orientation="vertical"
            android:layout_marginLeft="10dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="BNPL Limit"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="available balance"
                />
        </LinearLayout>
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/round2"
            android:layout_alignParentRight="true"
            android:layout_marginTop="2dp"
            android:layout_marginRight="10dp"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            />
    </RelativeLayout>
       <Button
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:text="Pay"
         android:background="@color/blue"
           android:layout_marginHorizontal="30dp"
           android:textColor="@color/white"
           android:textSize="20sp"
           android:id="@+id/button"
           />

    </LinearLayout>

</RelativeLayout>