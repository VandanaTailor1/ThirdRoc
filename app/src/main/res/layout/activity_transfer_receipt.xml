<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    tools:context=".TransferReceipt">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/backgroundtransfer"
        android:layout_marginHorizontal="15dp"
        >
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/celebration"
        />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/verify"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:id="@+id/verify"

        />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Transfer Success"
            android:layout_below="@+id/verify"
            android:layout_centerHorizontal="true"
            android:textSize="20sp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="10dp"
            android:id="@+id/txt1"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your money has been successfully sent to"
            android:id="@+id/txt2"
            android:layout_below="@+id/txt1"
            android:layout_centerHorizontal="true"
            android:textColor="@color/bordercolor"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Edward methway"
            android:id="@+id/txt3"
            android:layout_below="@id/txt2"
            android:layout_centerHorizontal="true"
            android:textColor="@color/bordercolor"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="total transfer"
            android:layout_below="@+id/txt3"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:id="@+id/txt4"
            android:textColor="@color/bordercolor"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@id/txt5"
            android:layout_below="@+id/txt4"
            android:layout_marginTop="4dp"
            android:orientation="horizontal"
          android:layout_centerInParent="true"
            >
       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="$"
           android:textSize="25sp"
           android:id="@+id/txt5"
           />
        <TextView
            android:id="@+id/txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:layout_marginLeft="3dp"
            android:layout_below="@+id/txt4"
            android:layout_centerHorizontal="true"
            android:textSize="25sp"/>
        </LinearLayout>
      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="Paid from BNPL"
          android:layout_below="@+id/txt5"
          android:layout_centerHorizontal="true"
          android:layout_marginTop="2dp"
          android:id="@+id/txt6"
          android:textColor="@color/bordercolor"
          />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Refrance Number"
            android:layout_below="@+id/txt6"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="25dp"
            android:id="@+id/txt7"
            android:textStyle="bold"
            android:textSize="20sp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="56754675460bfkvb495"
            android:layout_below="@+id/txt7"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="1dp"
            android:id="@+id/txt8"
            />
         <ImageView
             android:layout_width="45dp"
             android:layout_height="40dp"
             android:layout_below="@+id/txt8"
             android:layout_centerHorizontal="true"
             android:src="@drawable/copy"
             android:id="@+id/copy"
             />
        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/copy"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:layout_marginHorizontal="20dp"
            android:text="Done"
            android:background="@color/blue"
            android:id="@+id/btn"
            />
        <ImageView
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:src="@drawable/share"
            android:layout_below="@+id/btn"
            android:layout_centerHorizontal="true"
            />
    </RelativeLayout>

</LinearLayout>