<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AmmountPay2">

    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/featherarrowleft"
        android:id="@+id/leftarrow"
        android:layout_marginTop="15dp"
        android:layout_marginStart="10dp"
        />

    <androidx.cardview.widget.CardView
          android:layout_width="65dp"
         android:layout_height="65dp"
          app:cardCornerRadius="5dp"
            android:elevation="1dp"
         android:layout_centerHorizontal="true"
         android:layout_marginTop="40dp"
                 android:id="@+id/shop"
    >
    <ImageView
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:src="@drawable/shop"
        android:layout_margin="10dp"
        />
</androidx.cardview.widget.CardView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reliance Digital"
        android:layout_below="@+id/shop"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:id="@+id/txt"
        android:layout_marginTop="10dp"
        android:textSize="20sp"
        />
    <ImageView
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:src="@drawable/edit4_curved"
        android:layout_below="@+id/shop"
        android:layout_toRightOf="@+id/txt"
        android:layout_marginTop="20dp"
        android:layout_marginStart="2dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="you are paying"
        android:layout_below="@+id/txt"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:textSize="20sp"
       android:id="@+id/money"
 />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="$"
        android:layout_below="@id/money"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:textSize="30sp"
        android:id="@+id/dolar"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:layout_below="@id/money"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:textSize="30sp"
        android:background="@null"
        android:layout_toRightOf="@+id/dolar"
        android:id="@+id/money2"
        />
</RelativeLayout>