<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeFragment">

    <ImageView
        android:id="@+id/img1"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="30dp"
        android:src="@drawable/new_logo_client"
        />

    <TextView
        android:id="@+id/wlcmtxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="30dp"
        android:layout_toRightOf="@+id/img1"
        android:text="welcome to" />

    <ImageView
        android:id="@+id/img2"
        android:layout_width="wrap_content"
        android:layout_height="10dp"
        android:layout_below="@+id/wlcmtxt"
        android:layout_marginLeft="13dp"
        android:layout_toRightOf="@+id/img1"
        android:src="@drawable/thirdroc"/>

    <ImageView
        android:id="@+id/notificationid"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="30dp"
        android:layout_marginRight="10dp"
        android:src="@drawable/notification"

        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/notificationid"
        android:layout_marginStart="10dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/blueshade"
        android:id="@+id/relate1"
        >

        <TextView
            android:id="@+id/txt1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:text="BNPL Limit"
            android:textColor="@color/white"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/dolar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt1"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="1dp"
            android:text="$5000000"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/card"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/group"
            />

        <TextView
            android:id="@+id/smt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/dolar"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="5dp"
            android:text="SMT LABS PRIVATE LTD"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/avlbe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/smt"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:text="Available Limit"
            android:textColor="@color/white"
            android:textSize="10sp"
            android:textStyle="normal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/smt"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/avlbe"
            android:text="$500000"
            android:textColor="@color/white"
            android:textSize="10sp"
            android:textStyle="bold" />

        <View
            android:id="@+id/line"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_below="@id/avlbe"
            android:layout_marginTop="15dp"
            android:background="@color/white" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/line">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:padding="10dp"
                    >


                    <ImageView
                        android:id="@+id/swith"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:src="@drawable/swt" />

                    <TextView
                        android:id="@+id/swttxt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Switch Lender"
                        android:textSize="11sp"
                        android:layout_marginStart="5dp"
                        android:textColor="@color/white" />

                </LinearLayout>

                <View
                    android:id="@+id/viewline"
                    android:layout_width="0.5dp"
                    android:layout_height="20dp"
                    android:layout_marginTop="9dp"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:background="@color/white" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                android:layout_weight="1"
                    android:gravity="center"
                    android:padding="10dp"
                    >

                <ImageView
                    android:id="@+id/trimg"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:src="@drawable/calendar"
                    app:tint="@color/white" />

                <TextView
                    android:id="@+id/transaction"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:text="Transaction"
                    android:textSize="11sp"
                    android:textColor="@color/white" />
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>

    </RelativeLayout>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="120dp"
            android:src="@drawable/baner"
            android:layout_below="@+id/relate1"
            android:layout_marginHorizontal="15dp"
            android:id="@+id/baner"
            />
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="15dp"
            android:layout_below="@+id/baner"
          android:layout_marginHorizontal="15dp"
            app:cardElevation="5dp"
           android:id="@+id/card2"
            tools:ignore="DuplicateIds">

            <LinearLayout
                android:paddingVertical="10dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:gravity="center"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/pay"
                        android:layout_width="75dp"
                        android:layout_height="50dp"
                        android:src="@drawable/scanpay" />

                    <TextView
                        android:id="@+id/t1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Scan to Pay"
                        android:textSize="10sp"
                        />

                </LinearLayout>

                <LinearLayout
                    android:gravity="center"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/trans"
                        android:layout_width="75dp"
                        android:layout_height="50dp"
                        android:src="@drawable/transactn" />

                    <TextView
                        android:id="@+id/t2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Transaction"
                        android:textSize="10sp"/>
                </LinearLayout>

                <LinearLayout
                    android:gravity="center"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/atten"
                        android:layout_width="75dp"
                        android:layout_height="50dp"
                        android:src="@drawable/attend" />

                    <TextView
                        android:id="@+id/t3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Attendance"
                        android:textSize="10sp"
                        />

                </LinearLayout>

                <LinearLayout
                    android:gravity="center"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/reward"
                        android:layout_width="75dp"
                        android:layout_height="50dp"
                        android:src="@drawable/gift" />

                    <TextView
                        android:id="@+id/t4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="reward"
                        android:textSize="10sp"
                        />
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/trnst"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/card2"
        android:layout_marginTop="10dp"
        android:textSize="16sp"
        android:layout_marginLeft="15dp"
        android:text="Transaction" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/card2"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:textSize="10sp"
        android:layout_toLeftOf="@+id/ero"
        android:text="View All Transactions"
        android:fontFamily="@font/dummytxt"
        android:textColor="@color/blue" />
    <ImageView
        android:layout_width="10dp"
        android:layout_height="25dp"
        android:layout_below="@id/card2"
        android:layout_alignParentRight="true"
        android:src="@drawable/ero"
        android:layout_marginTop="10dp"
        android:id="@+id/ero"
        />
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/trnst"
        app:cardCornerRadius="15dp"
        android:layout_marginHorizontal="15dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        >
    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="5dp"
        tools:listitem="@layout/home_recycle"
        android:id="@+id/recycle"
   />
    </androidx.cardview.widget.CardView>
</RelativeLayout>